<Mohon_Baru_Page>:
    MDFloatLayout:
        canvas:
            Color:
                rgb: rgba(192,192,192,255)
            Rectangle:
                size: self.size
                pos: self.pos

    MDTopAppBar:
        id: mohonbaru
        name: "mohonbaru"
        title:"Permohonan Anggota Baru"
        #size_hint_y: 0.08
        pos_hint: {"top" : 1}
        #left_action_items: [['view-list-outline', lambda x: app.pindah_ke(1,1)]]
        #right_action_items: [['select-group', lambda x: app.pindah_ke(0,1)]]

    # form entry daftar anak
